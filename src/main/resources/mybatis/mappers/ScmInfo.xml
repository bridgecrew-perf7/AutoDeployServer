<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kihyeonkim.remotedeploy.deploy.mapper.ScmInfoMapper">
	<resultMap id="gitHubKeySet" type="com.kihyeonkim.remotedeploy.deploy.model.GithubKeySetModel">
		<result column="USER_NAME" property="userName"/>
		<result column="PERSONAL_ACCESS_TOKEN" property="accessToken"/>
	</resultMap>

	<resultMap id="repoAliasModel" type="com.kihyeonkim.remotedeploy.deploy.model.RepoAliasModel">
		<result column="SCM_TYPE" property="scmType"/>
		<result column="REPO_ALIAS" property="repoAlias"/>
		<result column="USERNAME" property="userName"/>
	</resultMap>

	<select id="selectRepoAliasList" resultType="repoAliasModel">
		SELECT SCM_TYPE,
			   REPO_ALIAS,
			   USERNAME
		FROM SCM_INFO
	</select>

	<select id="selectScmKeySet" parameterType="hashMap" resultMap="gitHubKeySet">
		SELECT USERNAME,
			   PERSONAL_ACCESS_TOKEN
		FROM SCM_INFO
		WHERE REPO_ALIAS = #{repoAlias}
	</select>

	<insert id="insertRepoInfo" parameterType="hashMap">
		INSERT INTO SCM_INFO(SCM_TYPE,
							 REPO_ALIAS,
							 USERNAME,
							 PERSONAL_ACCESS_TOKEN)
		VALUES (#{scmType},
				#{repoAlias},
				#{userName},
				#{personalAccessToken})
	</insert>

	<update id="updateScmInfo" parameterType="hashMap">
		UPDATE SCM_INFO
		<set>
			<if test="scmType != null">SCM_TYPE=#{scmType},</if>
			<if test="@org.apache.commons.lang.StringUtils@isBlank(userName)">USER_NAME=#{userName},</if>
			<if test="@org.apache.commons.lang.StringUtils@isBlank(personalAccessToken)">
				PERSONAL_ACCESS_TOKEN=#{personalAccessToken},
			</if>
		</set>
		WHERE REPO_ALIAS = #{repoAlias}
	</update>

	<delete id="deleteRepoInfo" parameterType="hashMap">
		DELETE
		FROM SCM_INFO
		WHERE REPO_ALIAS = #{repoAlias}
	</delete>
</mapper>